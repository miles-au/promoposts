<% provide(:title, "Log In / Sign Up") %>

<div class="container front-form" style="background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('/assets/splash-login.jpg');">
  <div class="row">
    <div class="col-md-6 form-holder">
      <h3>Log In</h3>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= link_to "(forgot password?)", new_password_reset_path %>
        <%= f.password_field :password %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <p style="margin-left: 20px;" >Remember me on this computer</p>
        <% end %>
        
        <%= f.submit "Log in", class: "pop-button" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>