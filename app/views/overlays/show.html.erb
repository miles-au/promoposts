<div class="row">
  <div class="col-md-3 col-sm-12 sidebar">
    <div class="accordion side_button">
      <h3 class="pop-button">Add new overlay</h3>
    </div>
    <div class="sub-accordion" id="edit_campaign_container">
      <%= render 'new_overlay' %>
    </div>
    <div class="accordion side_button">
      <h3 class="pop-button">Set Default Overlay</h3>
    </div>
    <div class="sub-accordion" id="edit_campaign_container">
      <%= render 'default_overlay' %>
    </div>

  </div>
  <div class="col-md-9 col-sm-12">
    <h1>Your Overlays</h1>
    <% @overlays.each_with_index do |overlay| %>
      <% if overlay.id %>
        <div style="margin-bottom: 10px;">
          <h3 style="text-align: left;"><%= overlay.name %></h3>
          <img src="<%= overlay.picture.url %>" style="max-height: 300px; max-width: 100%;" />
        </div>
        <div>
          <%= link_to overlays_path( id: overlay.id), method: :delete do %>
            <span class="glyphicon glyphicon-trash" ></span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 10) {
      alert('Maximum file size is 10MB. Please choose a smaller file.');
    }
  });

  $( ".accordion" ).click(function() {
    $(this).next(".sub-accordion").toggle();
  });
</script>