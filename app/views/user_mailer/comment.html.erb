<% provide(:user, @user.id.to_s) %>
<% provide(:digest, @user.activation_digest) %>

<p>Hey <%= @user.name %>,</p>

<% if @category == 'post' %>
	<p>
		Somebody commented on your post!
	</p>
<% else %>
	<p>
		Somebody replied to your comment!
	</p>
<% end %>

<h3 style='text-align: center;'>
	'<%= @message %>'<br>
	- <%= @commenter.name %>
</h3>

<div class='email-cta' style="padding: 15px; width: 80%; text-align: center; background-color: #ea5455; margin: 0 auto;">
	<%= link_to "Click here to see the post.", micropost_url(:id => @micropost.id), :style => 'color: white; text-decoration: none;', target: "_blank" %>
</div>