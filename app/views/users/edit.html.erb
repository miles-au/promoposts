<% provide(:title, "Edit user") %>
<% provide(:button_text, "Save Changes") %>
<h1>Update your profile</h1>

<div class="row">
	<div class="col-md-3">
		<div class="avatar" style="background-image: url('<%= current_user.avatar %>'); height: 150px; width: 150px; border: 2px solid $sigBlue;"></div>
	</div>
	<div class="col-md-6">
		<%= render 'form' %>
		<%= link_to(current_user, method: :delete, data: { confirm: "Are you sure you want to delete your account?" })do %>
			<button class="btn btn-greyed" style="width: 100%; margin-top: 50px;">Delete Your Account</button>
		<% end %>
	</div>
</div>