<% provide(:title, @title) %>
<div class="row">
  <div class="col-md-4">
    <div id="user_display">
      <section class="user_info">
        <div id="avatarBacking" style="display: inline-block; vertical-align: top;">
          <div class="avatar" style="background-image: url('<%= @user.avatar %>');"></div>
        </div>
        <h1>
          <%= link_to @user.name, @user %>
        </h1>
      </section>
    </div>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <div class="users-gallery" id="usersList">
        <%= render @users %>
      </div>
      <div id="infinite-scrolling">
        <%= will_paginate @users %>
      </div>
    <% end %>

  </div>
</div>