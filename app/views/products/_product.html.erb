<div class='productContainer'>
	<%= link_to product.url, :target => "_blank" do %>
		<div class="product">
			<% if product.picture.url %>
			  <div class="addProduct" style="background-image: url('<%= product.picture.url %>');"></div>
			<% else %>
			  <div class="addProduct" style="background-image: url('<%= ActionController::Base.helpers.asset_path("picture.svg")%>');"></div>
			<% end %>
		</div>
		<h6 style="text-align: center; margin-bottom: 30px;">
			<% if logged_in? && @user == current_user %>
				<%=link_to({:controller => "lists", :action => "add_product", :user_id => current_user.id, :list_id => list.id, :product_id => product.id, :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'},) do%>
				
					<span class="glyphicon glyphicon-pencil"></span>
				<% end %>
			<% end %>
			<%= product.title %>
		</h6>
	<% end %>
</div>