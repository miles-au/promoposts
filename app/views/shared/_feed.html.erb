<div class="feed">
  <ol id="postsContainer" class="microposts microposts-grid">
    <%= render @feed_items %>
  </ol>
  <div id="infinite-scrolling">
	<% if @feed_items.any? %>
  	  <%= will_paginate @feed_items %>
  	<% else %>
  	  <h4>There are no posts here! (Follow some people or create a post!)</h4>
  	<% end %>
  </div>
</div>

