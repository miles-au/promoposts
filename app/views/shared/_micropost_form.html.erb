<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div id="digital_asset_buttons" class="create_post_buttons">
    <p><em>Digital Asset Types:</em></p>
    <div class="categoryLabel">
      <%= f.label :category, "General Update" %>
      <%= f.radio_button :category, "general_update" %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Cover Photo" %>
      <%= f.radio_button :category, "cover_photo" %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Email Banner" %>
      <%= f.radio_button :category, "email_banner" %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Infographic" %>
      <%= f.radio_button :category, "infographic" %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Memes" %>
      <%= f.radio_button :category, "meme" %>
    </div>
  </div>
  <div class="create_post_buttons">
    <div class="categoryLabel">
      <%= f.label :category, "News" %>
      <%= f.radio_button :category, "news", :checked => true %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Question" %>
      <%= f.radio_button :category, "question" %>
    </div>
    <div class="categoryLabel">
      <%= f.label :category, "Careers" %>
      <%= f.radio_button :category, "careers"%>
    </div>
  </div>

  <div class="field">
    <%= f.label :shareable, "Allow other users to share to this post to their social media." %>
    <%= f.check_box :shareable, {:checked => 'checked', :style => "display: inline-block;"} , true, false %>
  </div>

  <div class="field" style="">
    <%= f.text_area :content, placeholder: "Compose new post...", maxlength: 500 %>
  </div>
  <div class="picture">
    <span style="display: inline-block; font-size: 1.2em;" class="glyphicon glyphicon-picture"></span>
    <p style="display: inline-block; text-align: top;">Add an image (10mb max)</p>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="external_url">
    <%= f.label :external_url, "Include a link:"%>
    <%= f.text_field :external_url, placeholder: "Include a website url here:", maxlength: 500 %>
  </div>
  <%= f.submit "Post", class: "pop-button" %>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 10) {
      alert('Maximum file size is 10MB. Please choose a smaller file.');
    }
  });
</script>