<!--modal-->
	<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content"></div>
	  </div>
	</div>

<% if !logged_in? %>
	<div class="center jumbotron">
	  <h1>news. content. ideas.</h1>

	  <h2>
	    the digital community for promotional products
	  </h2>
	  <div style="text-align: center;">
	  	<%= link_to "log in / sign up", social_login_path, class: "pop-button pop-button-big" %>
	  </div>
	</div>
<% end %>

<!--search-->
<div class="searchBar">
	<%= form_tag root_path, :method => 'get', id: 'searchPosts' do %>
	  <%= text_field_tag :search, params[:search], :placeholder => 'search posts' %>
	  <%= hidden_field_tag :feed , "search" %>
	  <%= button_tag(type: "submit", :name => nil,class: "search-btn") do %>
	    <span class="glyphicon glyphicon-search" ></span>
	  <% end %>
	<% end %>
</div>

<!--feeds-->
<div id="feeds" class="mobile-hide" style="display:inline-block;">
	<% if logged_in? %>
		<%= link_to root_path( :feed => "user") do%>
			<h5 id="userFeed" class="tab <%= 'tab-active' if @feed_type == 'user' %>">Your Feed</h5>
		<% end %>
	<% end %>
	<%= link_to root_path( :feed => "global") do%>
		<h5 id="globalFeed" class="tab <%= 'tab-active' if @feed_type == 'global' %>">Global Feed</h5>
	<% end %>
	<%= link_to root_path( :feed => "questions") do%>
		<h5 id="questionsFeed" class="tab <%= 'tab-active' if @feed_type == 'questions' %>">Questions</h5>
	<% end %>
	<%= link_to root_path( :feed => "news") do%>
		<h5 id="newsFeed" class="tab <%= 'tab-active' if @feed_type == 'news' %>">News</h5>
	<% end %>
	<%= link_to root_path( :feed => "careers") do%>
		<h5 id="careersFeed" class="tab <%= 'tab-active' if @feed_type == 'careers' %>">Careers</h5>
	<% end %>

	<div id="digital_feeds">
		<h5 style="margin-bottom: 0px;"><strong>Digital Assets:</strong></h5>
		<%= link_to root_path( :feed => "digital_assets") do%>
			<h5 id="digitalAssetsFeed-All" class="tab tab-digital <%= 'tab-active' if @feed_type == 'digital_assets' %>">All</h5>
		<% end %>
		<%= link_to root_path( :feed => "campaign") do%>
			<h5 id="digitalAssetsFeed-campaign" class="tab tab-digital <%= 'tab-active' if @feed_type == 'campaign' %>">Campaigns</h5>
		<% end %>
		<%= link_to root_path( :feed => "general_update") do%>
			<h5 id="digitalAssetsFeed-general_update" class="tab tab-digital <%= 'tab-active' if @feed_type == 'general_update' %>">General Updates</h5>
		<% end %>
		<%= link_to root_path( :feed => "cover_photo") do%>
			<h5 id="digitalAssetsFeed-cover_photo" class="tab tab-digital <%= 'tab-active' if @feed_type == 'cover_photo' %>">Cover Photos</h5>
		<% end %>
		<%= link_to root_path( :feed => "email_banner") do%>
			<h5 id="digitalAssetsFeed-email_banner" class="tab tab-digital <%= 'tab-active' if @feed_type == 'email_banner' %>">Email Banners</h5>
		<% end %>
		<%= link_to root_path( :feed => "infographic") do%>
			<h5 id="digitalAssetsFeed-All" class="tab tab-digital <%= 'tab-active' if @feed_type == 'infographic' %>">Infographics</h5>
		<% end %>
		<%= link_to root_path( :feed => "meme") do%>
			<h5 id="digitalAssetsFeed-All" class="tab tab-digital <%= 'tab-active' if @feed_type == 'meme' %>">Memes</h5>
		<% end %>
	</div>

</div>

<div id="feed-select" class="mobile-show feedSelect">
	<span id="select-title" class="selectTitle">Feed:</span>
	<div id="feed-names" class="mobile-show feedNames" >
		<% case params["feed"] %>
			<% when 'user'%>
				<p style="display: inline-block;">Your Feed</p>
			<% when 'global' %>
				<p style="display: inline-block;">Global Feed</p>
			<% when 'questions' %>
				<p style="display: inline-block;">Questions</p>
			<% when 'news' %>
				<p style="display: inline-block;">News Feed</p>
			<% when 'careers' %>
				<p style="display: inline-block;">Careers</p>
			<% when 'search' %>
				<p style="display: inline-block;"><%= "'#{params[:search]}'" %></p>
			<% else %>
				<% if logged_in? %>
					<p style="display: inline-block;">Your Feed</p>
				<% else %>
					<p style="display: inline-block;">Global Feed</p>
				<% end %>
		<% end %>
		<span id="slide-glyph" class="glyphicon glyphicon-triangle-right"></span>
	</div>
	<div id="feeds-slide" style="display: none;" class="slide-close feedSlide">
		<% if logged_in? %>
			<a href="/?feed=user">Your Feed</a>
		<% end %>
		<a href="/?feed=global">Global Feed</a>
		<a href="/?feed=questions">Questions</a>
		<a href="/?feed=news">News</a>
		<a href="/?feed=careers">Careers</a>
	</div>
</div>

<div id="digi-feed-select" class="mobile-show feedSelect">
	<span id="digi-select-title" class="selectTitle">Digital Assets:</span>
	<div id="digi-feed-names" class="mobile-show feedNames" >
