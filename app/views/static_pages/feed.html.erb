<script>
	<% filter = params['filter'] %>

	$("#startingFeed").hide();
	var tabs = document.getElementsByClassName('tab');

	$('end').classList.add('hide');

	for(var x = 0; x < tabs.length; x++){
		if(tabs[x].classList.contains('tab-active')){
			tabs[x].classList.remove('tab-active');
		}
	}

	var <%= filter %>Feed = document.getElementById('<%= filter %>Feed');
	<%= filter %>Feed.classList.add('tab-active');

	var <%= filter %>FeedContainer = document.getElementById('<%= filter %>FeedContainer');
	var globalFeedContainer = document.getElementById('globalFeedContainer');
	globalFeedContainer.classList.add('hide');
	if(<%= filter %>FeedContainer.classList.contains('hide')){
		<%= filter %>FeedContainer.classList.remove('hide');
	}

	<% if @feed_items.next_page %>
	  $('#<%= filter %>FeedContainer').append("<%= j render('shared/feed')%>");
	  $('.pagination').replaceWith("<%= j will_paginate @feed_items %>");
	<% else %>
	  $('.pagination').remove();
	  $('end').classList.remove('hide');
	<% end %>

</script>