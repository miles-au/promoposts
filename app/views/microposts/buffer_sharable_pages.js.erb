if($('#buffer-pages-container').hasClass("inactive") && $('#buffer-pages-container').hasClass("first")){
	<% if @accounts %>
		<% @accounts.each do |page| %>
			$('#buffer-pages-container').append("<%= escape_javascript render(:partial => 'page_display', :locals => { :page_name => page.name, :page_id => page.account_id}) %>");
		<% end %>
	<% else %>
			$('#buffer-pages-container').append("<%= escape_javascript render(:partial => 'shared/connect_account', :locals => { :provider => 'buffer'}) %>");
	<% end %>

	$('#buffer-pages-container').removeClass("inactive");
	$('#buffer-pages-container').removeClass("first");
}else if($('#buffer-pages-container').hasClass("inactive")){
	$('#buffer-pages-container').removeClass("inactive");
}else{
	$('#buffer-pages-container').addClass("inactive");
}