<div class="micropost-full">
  <div id="shareContainer">
    <h3>Share To:</h3>
    <% if current_user %>
      <%= link_to({:controller => "microposts", :action => "facebook_sharable_pages", :id => current_user.id, :micropost => @micropost.id, remote: true}, :class => "SoMeIcon") do%>
        <img src="https://static.addtoany.com/buttons/facebook.svg" style="background-color: #3b5998;">
      <% end %>
    <% else %>
      <h6>Please log in to share this post</h6>
    <% end %>
    <div id="pagesContainer" class="inactive first">
    </div>
  </div>
  <div class="section">
    <div class="avatar avatar-thumbnail" style="background-image: url('<%= @micropost.user.avatar %>');"></div>
    <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
  </div>
  <span class="timestamp">
      Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
      <% if current_user %>
        <% if current_user?(@micropost.user) || current_user.admin? %>
          <%= link_to "delete", @micropost, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
    <% end %>
    </span>
  <div class="section">
      <span class="content">
        <%= @micropost.content %>
        <% if @micropost.picture? %>
        <%= link_to image_tag(@micropost.picture.url, alt: "promo post image") %>
        <% end %>
      </span>
  </div>
</div>