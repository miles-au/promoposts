if($('#linkedin-pages-container').hasClass("inactive") && $('#linkedin-pages-container').hasClass("first")){
	<% if @accounts %>
		<% @accounts.each do |page| %>
			$('#linkedin-pages-container').append("<%= escape_javascript render(:partial => 'page_display', :locals => { :page_name => page.name, :page_id => page.account_id, :page_picture => page.picture}) %>");
		<% end %>
	<% else %>
			$('#linkedin-pages-container').append("<%= escape_javascript render(:partial => 'shared/connect_account', :locals => { :provider => 'linkedin'}) %>");
	<% end %>

	$('#linkedin-pages-container').removeClass("inactive");
	$('#linkedin-pages-container').removeClass("first");
}else if($('#linkedin-pages-container').hasClass("inactive")){
	$('#linkedin-pages-container').removeClass("inactive");
}else{
	$('#linkedin-pages-container').addClass("inactive");
}