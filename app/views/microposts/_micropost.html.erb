<li id="micropost-<%= micropost.id %>">
  <div class="section">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  </div>
  <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user %>
        <% if current_user?(micropost.user) || current_user.admin? %>
          <%= link_to "delete", micropost, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
    <% end %>
    </span>
  <div class="section">
    <span class="content">
      <%= micropost.content %>
      <% if micropost.picture? %>
        <div class="square" style="background-image: url('<%= micropost.picture.url %>');">
      <% end %>
      <% if micropost.picture? == false %>
      <div class="noPic square">
        <span></span><strong>"<%= micropost.content %>"</strong>
      </div>
      <% end %>
    </span>
  </div>
</li>