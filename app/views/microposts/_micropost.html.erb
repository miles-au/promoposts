<div class="micropost_item">
  <div class="row" style="height: 100%;">
    <div class="col-md-4 col-sm-12" style="margin-bottom: 5px;">
      <div class="user-info">
        <img class="avatar avatar-thumbnail" src="<%= micropost.user.avatar %>" style="display: inline-block;"/>
        <div style="display: inline-block;">
          <h4><%= link_to micropost.user.name, micropost.user %></h4>
          <p class="user-company"><%= micropost.user.company || "&nbsp;".html_safe %></p>
          <%= render :partial => 'shared/accolades', :locals => {:user => micropost.user} %>
        </div>
      </div>
      <div class="content-container">
        <span class="timestamp">
          <%= time_ago_in_words(micropost.created_at) %> ago.
          <% if current_user %>
            <% if current_user?(micropost.user) || current_user.admin? %>
              <%= link_to "delete", micropost, method: :delete,
                                               data: { confirm: "You sure?" } %>
            <% end %>
          <% end %>
        </span>
        <% if micropost.content.length > 100 %>
          <p><%= micropost.content[0,100] %>...</p>
        <% else %>
          <p><%= micropost.content %></p>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 col-sm-12" style="height: 100%;">
      <%= link_to micropost do %>
        <p class="category-title"><%= micropost.category.titlecase.tr("_", " ") %></p>
        <img src="<%= micropost.picture.url %>" />
      <% end %>
    </div>
  </div>
  <div class="row subrow" style="margin-top: 5px; margin-bottom: 5px;">
      <% if current_user %>
        <div class="col-md-3 col-sm-12">
            <%= link_to download_assets_path(:id => micropost.id) do%>
              <div class="pop-button">
                <p class = "top_icons"><span class="glyphicon glyphicon-cloud-download"></span> Download Post</p>
              </div>
            <% end %>
          </div>
          <div class="col-md-3 col-sm-12">
            <%= link_to share_post_path(:id => micropost.id) do%>
              <div class="pop-button">
                <p class = "top_icons"><span class="glyphicon glyphicon-share-alt"></span> Share to Social Media</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p><%= link_to 'Sign in', social_login_path %> to 
              <span class="glyphicon glyphicon-cloud-download"></span> download this post and 
              <span class="glyphicon glyphicon glyphicon-share-alt"></span> share to social media</p>
        <% end %>
    </div>
</div>